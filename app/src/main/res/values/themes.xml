<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MusicPlayer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="Theme.MusicPlayer" parent="Base.Theme.MusicPlayer" />

    <style name="textView_style">
        <item name="android:fontFamily">@font/quicksand_medium</item>
       <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>

    </style>


    <style name="button_style">

        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>

        <item name="android:background">@drawable/ll_shape_color_background</item>
    </style>


    <style name="edit_text_style">

        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/et_shape_color_background</item>
        <item name="android:fontFamily">@font/quicksand_medium</item>
        <item name="android:layout_width">340dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingLeft">16dp</item>
    </style>



</resources>